# Application Settings
ENVIRONMENT=development
DEBUG=false
APP_NAME="Call Center AI"
APP_VERSION="1.0.0"
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
PUBLIC_URL=https://your-domain.com

# Security
SECRET_KEY=your-secret-key-here-generate-with-make-generate-secrets
JWT_SECRET_KEY=your-jwt-secret-here-generate-with-make-generate-secrets
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Telephony Configuration
TELEPHONY_PROVIDER=twilio  # Options: twilio, asterisk
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/voice

# AI Models Configuration
WHISPER_MODEL=openai/whisper-tiny
WHISPER_DEVICE=cpu  # Options: cpu, cuda
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
TTS_MODEL=kokoro
TTS_VOICE=af_heart

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=callcenter
POSTGRES_USER=callcenter_user
POSTGRES_PASSWORD=your-postgres-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Audio Processing
VAD_SENSITIVITY=3  # 1-5, higher is more sensitive
MIN_SPEECH_DURATION_MS=250
MAX_SPEECH_DURATION_MS=30000
SILENCE_DURATION_MS=1500

# Performance Settings
MAX_CONCURRENT_CALLS=100
RESPONSE_TIMEOUT_MS=5000

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# File Paths (optional, defaults are usually fine)
# MODELS_PATH=/app/models
# LOGS_PATH=/app/logs
# CACHE_PATH=/app/cache

# Feature Flags
ENABLE_CALL_RECORDING=true
ENABLE_REAL_TIME_TRANSCRIPTION=true
ENABLE_PROFANITY_FILTER=false
ENABLE_CUSTOM_VOCABULARY=true

# AWS S3 (for backups and recordings)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=call-center-recordings
